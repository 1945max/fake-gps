<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.xxx.fake.gps">

    <uses-permission
        android:name="android.permission.ACCESS_MOCK_LOCATION"
        tools:ignore="MockLocation,ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.auth.verify.VerifyEmailActivity"
            android:parentActivityName=".ui.auth.verify.VerifyEmailActivity"
            android:label="Verify Email" />
        <activity
            android:name=".ui.auth.AuthActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.history.HistoryActivity"
            android:parentActivityName=".ui.history.HistoryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:parentActivityName=".ui.search.SearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.google.firebase.auth.internal.FederatedSignInActivity"
            tools:replace="android:launchMode"
            android:launchMode="standard" />

        <service
            android:name=".service.FakeLocationService"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name=".provider.DataProvider"
            android:authorities="${applicationId}.provider"
            android:enabled="true"
            android:exported="true">

            <!-- android:grantUriPermissions="true" -->
            <!-- android:readPermission="com.e.myapplication.READ_DATABASE" -->
            <!-- android:writePermission="com.e.myapplication.WRITE_DATABASE"> -->
            <!--  -->
        </provider>

        <receiver
            android:name=".receiver.FakeStopReceiver"
            android:enabled="true"
            android:exported="false" />

        <!-- Maps Meta Data -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>