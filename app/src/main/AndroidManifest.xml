<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.fake.gps">

    <uses-permission
        android:name="android.permission.ACCESS_MOCK_LOCATION"
        tools:ignore="MockLocation,ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <permission
        android:name="id.fake.gps.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="id.fake.gps.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">

        <!--Favorite -->
        <activity
            android:name="xxx.FA"
            android:label="Favorite" />

        <!--History -->
        <activity
            android:name="xxx.HA"
            android:label="@string/history_label" />

        <!--Search -->
        <activity android:name="xxx.SA" />

        <!--Main -->
        <activity android:name="xxx.MA">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--FakeGpsService -->
        <service android:name="xxx.FGS" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!--MockReceiver -->
        <receiver
            android:name="xxx.MR"
            android:enabled="true"
            android:exported="false" />

        <!--DatabaseProvider -->
        <provider
            android:name="xxx.DP"
            android:authorities="id.fake.gps.db.local"
            android:enabled="true"
            android:exported="true"
            android:grantUriPermissions="true"
            android:readPermission="id.fake.gps.READ_DATABASE"
            android:writePermission="id.fake.gps.WRITE_DATABASE">

            <!-- <meta-data -->
            <!-- android:name="android.support.FILE_PROVIDER_PATHS" -->
            <!-- android:resource="@xml/path_image_content_provider" /> -->
        </provider>
    </application>

</manifest>